{% extends 'base.html.twig' %}

{% block title %}Livro{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-3">{{ livro.titulo }}</h1>

    <table class="table table-striped mt-4  ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livro.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ livro.titulo }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ livro.Autorname }}</td>
            </tr>
            <tr>
                <th>Ano</th>
                <td>{{ livro.ano }}</td>
            </tr>
            <tr>
                <th>Resumo</th>
                <td>{{ livro.resumo }}</td>
            </tr>
        </tbody>
    </table>



<div class="d-flex gap-3">
    <a class="btn btn-warning" href="{{ path('app_livro_index') }}">back to list</a>

    <a class="btn btn-outline-primary" href="{{ path('app_livro_edit', {'id': livro.id}) }}">Editar</a>

    {{ include('livro/_delete_form.html.twig') }}
</div>
</div>
{% endblock %}
