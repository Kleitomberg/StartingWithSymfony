{{ form_start(form) }}

<div class="container">
    
    <div class="col-md-6 offset-md-3">

    <div class="form-group">
        {{ form_label(form.titulo) }}
        {{ form_widget(form.titulo,{'attr':{'class':'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.autor) }}
        {{ form_widget(form.autor,{'attr':{'class':'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.ano) }}
        {{ form_widget(form.ano,{'attr':{'class':'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.resumo) }}
        {{ form_widget(form.resumo,{'attr':{'class':'form-control'}}) }}
    </div>

    <button class="btn btn-success mt-3">{{ button_label|default('Save') }}</button>
</div>
</div>
{{ form_end(form) }}
