{% extends 'base.html.twig' %}

{% block title %}Livro{% endblock %}

{% block body %}
    <h1>Livro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livro.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ livro.titulo }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ livro.autor }}</td>
            </tr>
            <tr>
                <th>Ano</th>
                <td>{{ livro.ano }}</td>
            </tr>
            <tr>
                <th>Resumo</th>
                <td>{{ livro.resumo }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-3"> 
    <a href="{{ path('app_livro_crud_index') }}" class="btn btn-warning">Voltar para lista</a>

    <a href="{{ path('app_livro_crud_edit', {'id': livro.id}) }}" class="btn btn-primary">Editar</a>

    {{ include('livro_crud/_delete_form.html.twig') }}
</div>
{% endblock %}
